    <main id="tercer-main">
        <div class="hospedajes">
            <% var contador=0; %>
            <% hospedajes.forEach((hospedaje)=> { %>
                <% if( contador <8 ) { %>
                    <article class="articuloCaja">
                        <a href="/products/detail/<%= hospedaje.id %>">
                            <div class="contenedor-imagen">
                                <!-- <a href="/"> --> <img src="/images/products/<%=hospedaje.image[0]%>" alt="<%= hospedaje.name %>" > <!-- </a>  --> 
                            </div>
                        </a>
                        <div class="contenedor-nombre"> 
                            <p class="nombre"> <%= hospedaje.name  %>  </p>
                        </div>
                        <!-- <div>
                            <p class="valoracion"> <i class="fa-solid fa-star"></i> <i class="fa-solid fa-star"></i> <i class="fa-solid fa-star"></i> </p>
                        </div> -->
                        <p id="incluye"> Incluye:</p>
                        <div>
                            <ul class="descripcion">
                                <% for (var i = 0; i < hospedaje.include.length && i < 5; i++) { %>
                                    <li><%= hospedaje.include[i] %></li>
                                <% } %>
                            </ul>
                        </div>
                    </article> 

                    <% contador++; %>
                <% } %>
                
            <% }) %>
            <div id="primeros-cuatro-productos">
               <!-- por el momento este div esta fuera de servicio  -->
            </div>
        </div>
