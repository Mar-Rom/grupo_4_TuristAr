<!DOCTYPE html>
<html lang="en">

<%-include ('./partials/head.ejs') %>

<body>
   <%- include('./partials/header.ejs') %>
    
    <main class="debajo-header-home">
        
        <section class="sec-main">
            <div class="contenedor-boton">
                <form class="boton-de-inputs">
                    <input class="campo" type="text" name="destino" placeholder="¿A dónde vas?">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </form>
            </div>
        </section>
    </main>

    <section class="sec-carr">
        <!-- <h2>¡Elige los mejores lugares para hospedarte!</h2> -->
        <div class="carruseluwu">
          <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
              <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>

            <div class="carousel-inner">
              <% for (let i=7; i < 11 ; i++) { %>
                <div class="carousel-item <%= i === 7 ? 'active' : '' %>">
                  <img src="/images/products/<%= hospedajes[i].image[0] %>" class="d-block w-100" alt="Slide <%= i + 1 %>">
                  <div class="descrip">
                    <h6>
                      <%= hospedajes[i].name %>
                    </h6>
                    <p>
                      <%= hospedajes[i].description %>
                    </p>
                  </div>
                </div>
              <% } %>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
          <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
          <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js"></script>
        </div>
      </section>

    <main id="tercer-main">
        <div class="hospedajes">
            <% var contador=0; %>
            <% hospedajes.forEach((hospedaje)=> { %>
                <% if( contador <8 ) { %>
                    <article class="articuloCaja">
                        <a href="/products/detail/<%= hospedaje.id %>">
                            <div class="contenedor-imagen">
                                <!-- <a href="/"> --> <img src="/images/products/<%=hospedaje.image[0]%>" alt="<%= hospedaje.name %>" > <!-- </a>  --> 
                            </div>
                        </a>
                        <div class="contenedor-nombre"> 
                            <p class="nombre"> <%= hospedaje.name  %>  </p>
                        </div>
                        <!-- <div>
                            <p class="valoracion"> <i class="fa-solid fa-star"></i> <i class="fa-solid fa-star"></i> <i class="fa-solid fa-star"></i> </p>
                        </div> -->
                        <p id="incluye"> Incluye:</p>
                        <div>
                            <ul class="descripcion">
                                <% for (var i = 0; i < hospedaje.include.length && i < 5; i++) { %>
                                    <li><%= hospedaje.include[i] %></li>
                                <% } %>
                            </ul>
                        </div>
                    </article> 

                    <% contador++; %>
                <% } %>
                
            <% }) %>
            <div id="primeros-cuatro-productos">
               <!-- por el momento este div esta fuera de servicio  -->
            </div>
        </div>
    </main>
    <%- include('./partials/footer.ejs')%>
    
</body>

</html>
